<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/medium_margin"
    android:clickable="true">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rvitem_tv_exercise_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="name of the exercise" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rvitem_iv_editExercise"
                style="@style/IconOnlyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_edit_black_24dp" />

        </LinearLayout>

        <include layout="@layout/set_list_top_row"/>

        <LinearLayout
            android:id="@+id/rvitem_ll_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rvitem_tv_noSetsInfo"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="no sets for this exercise"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>