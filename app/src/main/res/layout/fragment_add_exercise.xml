<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add exercise fragment" />

    <EditText
        android:id="@+id/addExerciseActivity_et_exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name of the exercise"
        android:inputType="text" />

    <EditText
        android:id="@+id/addExerciseActivity_tv_exerciseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/addExerciseActivity_bt_addSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add set" />

        <Button
            android:id="@+id/addExerciseActivity_bt_deleteSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="delete set" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/addExerciseActivity_ll_listOfSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addExerciseActivity_bt_saveExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save exercise"/>

</LinearLayout>