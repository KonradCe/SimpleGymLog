<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add exercise activity" />
    <EditText
        android:id="@+id/addExerciseActivity_et_exerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name of the exercise"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/addExerciseActivity_et_exerciseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date"
        android:inputType="number"
        android:selectAllOnFocus="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/addExerciseActivity_tv_trainingMaxInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="standard set with fixed weight"
            android:layout_weight="1"/>
        <Switch
            android:id="@+id/addExerciseActivity_sw_isBasedOnPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addExerciseActivity_bt_repsMinus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="-" />

            <EditText
                android:id="@+id/addExerciseActivity_et_reps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:hint="reps"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:freezesText="true"/>

            <Button
                android:id="@+id/addExerciseActivity_bt_repsPlus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addExerciseActivity_bt_weightMinus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="-" />

            <EditText
                android:id="@+id/addExerciseActivity_et_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:hint="weight"
                android:inputType="numberSigned|numberDecimal"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/addExerciseActivity_bt_weightPlus"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addExerciseActivity_bt_addSet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="add set" />

            <Button
                android:id="@+id/addExerciseActivity_bt_deleteSet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="delete set" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/addExerciseActivity_ll_listOfSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addExerciseActivity_bt_saveExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save exercise" />

</LinearLayout>